            {"name": "Content-Type", "value": "application/json"}
          ]
        },
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\"query\": \"{query}\", \"numResults\": 10, \"useAutoprompt\": true, \"contents\": {\"text\": {\"maxCharacters\": 2000}}}",
        "placeholderDefinitions": {
